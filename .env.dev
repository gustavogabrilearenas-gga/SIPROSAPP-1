# Entorno
ENVIRONMENT=development
DEBUG=True

# Django Core
SECRET_KEY=django-insecure-dev-key-change-in-production-123456789
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,api,web

# Base de Datos PostgreSQL (para desarrollo local sin Docker)
# En Docker estas variables se definen en docker-compose.yml
DB_NAME=siprosa_mes
DB_USER=siprosa_user
DB_PASSWORD=siprosa_pass_123
DB_HOST=postgres
DB_PORT=5432

# Rate limiting
THROTTLE_RATE_ANON=100/hour
THROTTLE_RATE_USER=1000/hour
LOGIN_THROTTLE_RATE=10/min
REGISTER_THROTTLE_RATE=5/hour

# CORS & CSRF
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000,http://127.0.0.1:3000

# Superusuario por defecto (se crea automÃ¡ticamente si no existe ninguno)
