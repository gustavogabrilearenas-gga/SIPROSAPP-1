# ============================================
# Dockerfile para SIPROSA MES - Frontend (Desarrollo)
# ============================================

FROM node:18-alpine

# Instalar dependencias necesarias para desarrollo
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copiar archivos de configuraci√≥n
COPY package*.json ./

# Generar package-lock.json si no existe e instalar dependencias
RUN npm install

# Exponer puerto
EXPOSE 3000

# Variables de entorno para desarrollo
ENV PORT 3000
ENV NODE_ENV development

# Script de inicio personalizado
COPY docker-entrypoint-dev.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint-dev.sh

# Usar el script de inicio como punto de entrada
CMD ["/usr/local/bin/docker-entrypoint-dev.sh"]
